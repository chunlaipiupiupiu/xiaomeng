/* pages/reset/reset.wxss */

page {
  background: rgb(245, 245, 245);
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

/*大图标开始*/

.header {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.header image {
  margin: 0 auto;
  width: 150rpx;
  height: 150rpx;
}

.header text {
  font-size: 20px;
  margin-top: 20rpx;
  text-align: center;
}

/*表单开始*/

.reset {
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.reset label {
  width: 20%;
  position: relative;
  left: 20rpx;
  font-size: 16px;
}

.reset input {
  width: 80%;
  float: right;
  font-size: 11pt;
}

/*用户名*/

.username {
  padding-top: 10px;
  padding-bottom: 10px;
  background: #fff;
  border-bottom: 1px solid rgb(245, 245, 245);
}

/*密码*/

.password {
  padding-top: 10px;
  padding-bottom: 10px;
  background: #fff;
}

