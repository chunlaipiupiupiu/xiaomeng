.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: rgb(245, 245, 245);
  font-size: 14px;
}

/* header开始 */
.header {
  width: 100%;
  height: 270px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
 /* 微信图标 */
.avatar {
  height: 80px;
  width: 80px;
  border-radius: 50%;
  margin-top: 100px;
}

open-data {
  overflow: hidden;
  display: block;
}

.avatar-border {
  z-index: 223;
}
/* 背景 */
.bg {
  position: absolute;
  height: 180px;
  width: 750rpx;
  overflow: hidden;
  filter: brightness(70%);
  z-index: 1;
}
.username {
  font-size: 36rpx;
  /* font-weight: bold; */
  margin-top: 5px;
  /* color: #66ccff; */
}
/* 关于我们图形部分 */
.header-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header-item-about {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 300rpx;
}

.header-item-about image {
  height: 33rpx;
  width: 33rpx;
  margin-top: 20rpx;
}

.header-item-about text {
  margin-top: 8rpx;
}

.header-item-right {
  text-align: center;
  margin-top: 20rpx;
}

.header-item-right text {
  font-size: 24rpx;
  /* margin-top: 5rpx; */
}

/* content开始，列表内容开始 */
.content {
  height: 800rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content-item {
  width: 630rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: space-around;
  border-radius: 20rpx;
  background-color: #6cf;
  margin-top: 40rpx;
}
/* 第一组列表 */
.content-top {
  height: 240rpx;
}
/* 第二组 */
.content-center {
  height: 240rpx;
}
/* 第三组 */
.content-botton {
  height: 240rpx;
}

.button {
  height: 95rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 0 40rpx;
  border-bottom: 1rpx solid #fff;
}

.button image:nth-of-type(1) {
  height: 55rpx;
  width: 55rpx;
  margin-left: 20rpx;
}

.share {
  background-color: #6cf;
  margin-left: 20rpx;
  padding:0;
}

button::after {
  border-radius: 0;
  border: none;
}

button {
  border-radius: 0;
  border: none;
}

.content image:nth-of-type(2) {
  width: 40rpx;
  height: 40rpx;
  margin-left: 270rpx;
}

.button text {
  color: #fff;
  margin-left: 20rpx;
  font-size: 33rpx;
  line-height: 33rpx;
}
