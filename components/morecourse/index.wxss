.container {
  width: 720rpx;
  position: absolute;
  top: 50%;
  left: 50%;
	transform: translate(-50%, -50%);
  background: #fff;
  background: rgba(0, 0, 0, 0.95);
  border-radius:5px;
  color: #fff;
  font-size: 15px;
  z-index: 9;
}

.morecourse {
  width: 100%;
  height: 100%;
}

.morecourse view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
  flex-wrap: wrap;
}

.morecourse label{
  padding-right: 20rpx;
}

.morecourse image {
  width: 50rpx;
  height: 50rpx;
}

.checkboxs {
  display: flex;
  flex-direction: row;
}

.infopick view{
  display: flex;
  flex-direction: row;
  margin: 0;
}

.morecourse button {
  width: 50%;
  margin: 0;
  padding: 0;
  float: left;
}
