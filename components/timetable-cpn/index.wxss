.container {
  width: 100%;
  height: 100%;
}

.header {
  position: fixed;
  width: 100%;
  height: 80rpx;
  z-index: 4;
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  text-shadow: 2rpx 2rpx 10rpx #fff;
  filter: progid:DXImageTransform.Microsoft.MotionBlur(strength=5, direction=145);
}

.top view {
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 50rpx;
}

.top text {
  font-size: 14px;
}

.content {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.content::before{
  display: block;
  position: absolute;
  margin-left: 50rpx;
  content: "";
  width: 700rpx;
  height: 1px;
  background-color: #07b529;
  opacity: 0.5;
}

.left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 50rpx;
  text-shadow: 2rpx 2rpx 10rpx #fff;
  filter: progid:DXImageTransform.Microsoft.MotionBlur(strength=5, direction=145);
}

.left view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 50rpx;
  height: 100rpx;
}

.left text {
  font-size: 14px;
}

.right {
  position: relative;
  width: 100%;
}

.right view {
  position: absolute;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 100rpx;
  height: 200rpx;
  overflow: hidden;
}

.item text {
  width: 92rpx;
  height: 180rpx;
  font-size: 7pt;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  opacity:0.95;
}

.add {
  z-index: 0;
  position: absolute;
  width: 85rpx;
  border-radius: 10rpx;
  height: 185rpx;
  background: gray;
  opacity: 0.5;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.add image {
  width: 100rpx;
  height: 100rpx;
}
